<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
<% end %>

<%= form_tag( {class: 'form-group'}) do %>
<fieldset>
	<legend>Please Log In</legend>
	<div>
		<%= label_tag :name, 'Name:' %>
		<%= text_field_tag :name, params[:name],{placeholder: '1', class:  'form-control'} %>
	</div>
	<div>
		<%= label_tag :password, 'Password:' %>
		<%= password_field_tag :password, params[:password],{placeholder: '1', class:  'form-control'} %>
	</div>
	<br>
	<div>
		<%= submit_tag "Login" ,{class:  'btn btn-primary'}%>
	</div>
</fieldset>
<% end %>


