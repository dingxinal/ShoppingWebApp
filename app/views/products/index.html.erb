<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1>Products</h1>

<table class="table">
  
  <tbody>
    <% @products.each do |product| %>
      <tr class= "<%=cycle('list_line_even','list_line_odd')%>">
        <td><%= image_tag(product.image, :class => "list_image")%></td>
        <td class="list_description"><dt><%= product.name %></dt>
        <dl><%= product.description %></dl><br>
        <dd><%= number_to_currency(product.price) %></dd></td>
        <td class="list_actions"><%= link_to 'Show', product, {class: 'btn btn-sm btn-outline-dark'} %><br><br>
        <%= link_to 'Edit', edit_product_path(product), {class: 'btn btn-sm btn-outline-dark'}%><br><br>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-sm btn-outline-dark' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path,{class: 'btn btn-success'} %>
